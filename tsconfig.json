{
    "compilerOptions": {
        "target": "es5",
        "module": "es6",
        "lib": [
            "dom",
            "es2015",
            "es2016.array.include"
        ],
        "declaration": true,
        "sourceMap": true,
        "importHelpers": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "pretty": true,
        "stripInternal": true,
        "skipLibCheck": true,
        "suppressImplicitAnyIndexErrors": true,
        "baseUrl": "src",
        "outDir": "dist",
        "paths": {
            "@politie/sherlock": [
                "."
            ],
            "@politie/sherlock/derivable/extension": [
                "derivable/extension"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "extensions/**/*.ts",
        "typings/**/*.d.ts"
    ]
}
